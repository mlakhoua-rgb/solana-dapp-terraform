# AWS Configuration
aws_region = "us-east-1"

# Environment Configuration
environment  = "dev"
project_name = "solana-dapp"

# Networking
vpc_cidr              = "10.0.0.0/16"
availability_zones    = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs   = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs  = ["10.0.11.0/24", "10.0.12.0/24"]
enable_vpc_flow_logs  = true

# Security
ssh_cidr_blocks = ["YOUR_IP/32"] # Replace with your IP address

# Storage
s3_bucket_name = "solana-dapp-dev-assets-12345" # Must be globally unique

# Compute
instance_type    = "t3.medium"
min_instances    = 1
max_instances    = 2
desired_instances = 1

# SSL/TLS (optional)
certificate_arn = "" # Leave empty for HTTP, or provide ACM certificate ARN

# Logging
log_retention_days = 7

# Alerts
alert_email = "your-email@example.com"
